<p style="color: green"><%= notice %></p>

<%= render @room %>
<%= render "messages/form", message: Message.new(room_id:@room.id,user_id: current_user.id) %>

<div data-chat-room="<%=@room.name%>">
<%= render @room.messages %>
</div>
<div>
  <%= link_to "Edit this room", edit_room_path(@room) %> |
  <%= link_to "Back to rooms", rooms_path %>

  <%= button_to "Destroy this room", @room, method: :delete %>
</div>
